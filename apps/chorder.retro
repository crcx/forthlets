{{
  : default: ' 2 + compile ; compile-only
  : defkey default: key ;

  : list s" jiopmkl;" ;
  : len list getLength ;

  variable skip
  variable offset
  : command ( c-c )
    dup char: z =if pop drop bye ;then
    dup char: u =if 0 offset ! drop defkey ;then
    dup char: h =if 64 offset ! drop defkey ;then
    dup char: n =if 8 emit drop defkey ;then
    dup char: , =if drop defkey command ;then
    dup char: c =if pop drop pop drop ;then
  ;

  : tonum   ( k-n )
    len for
      r 1- list + @ over =if drop pop 1- ;then
    next ;

---reveal---
  : safer-emit ( n-" )
    dup 32  <if . cr ;then
    dup 128 >if . cr ;then
    default: emit ;
  : ckey
    defkey command tonum
    defkey tonum 8 * +
    offset @ + ;
  : chorder
    repeat
      ckey
      dup . cr
      safer-emit cr
    again ;
}}
