{{
: default: ' 2 + compile ; compile-only
: defkey default: key ;

variable len

: ^ ( c- ) , len ++ ;

create list

key j ^ ( 0 )
key i ^ ( 1 )
key o ^ ( 2 )
key ; ^ ( 3 )

: tonum   ( k-n )
  dup char: z =if pop drop bye ;then
  len @ for
    r 1- list + @ over =if drop pop 1- ;then
  next ;

---reveal---

: chorder
  repeat
    key tonum 4 * 4 *
    key tonum 4 *
    key tonum
    + + . cr
  again ;
}}
chorder
