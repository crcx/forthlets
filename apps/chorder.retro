( Top set: )
(  i o  ) 
( j   ; ) 

( Bottom set: )
(  j k   ' )
( n        )

: default: ' 2 + compile ; compile-only
: defkey default: key ;

variable len
: ^ ` char: 32 accept tib >number , , len ++ ;
create list
^ ' 0
^ m 1
^ k 2
^ l 4

^ j 8
^ i 16
^ o 32
^ n 64
^ ; 96

: lookup  ( k- )
  len @ for
    list r 2 * + 1-
    2dup @ =if
      1- @ swap drop pop drop ;then
    drop
  next drop 0 ;

: show-char
  dup .
  dup 127 <if 
  dup 31  >if
    emit
  ;then drop ;then . cr ;

variable code
: chorder
  0 code !
  repeat
    defkey
    dup char: z =if drop drop ( bye ) ;then
    dup char: c =if drop code @ char: x then
    dup char: e =if drop code @ show-char char: x then
    dup char: d =if drop code @ . char: x then
    dup char: s =if drop code @ . char: ' then
    dup char: x =if
      drop 0
      0 code !
    else
      lookup dup dup . 32 >if dup emit then cr
      code @ + code !
      ( code @ show-char cr )
    then
  again ;
chorder
