{{
  variable c     ( columns )
  variable l     ( lines   )
  : pos ( -a ) c @ l @ (line) + ;
  : ws  ( -  ) whitespace dup off @ later whitespace ! ;
---reveal---
  : bconv ( "- )
    ws
    repeat
      (  -k ) key dup emit
      ( k-k ) c @ 64 =if l ++ 0 c ! then
      ( k-k ) dup 10 =if
      ( k-  )   drop
      (  -  )   pos 32 64 c @ - fill
      (  -  )   l ++ 0 c !
              else
      ( k-  )   pos ! c ++
              then
      l @ (line) @ char: ^ =if ;then
    again ;
}}
bconv
