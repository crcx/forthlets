: 404
  ( html
    ( head
      ( title ." Sorry, a 404 has been detected" )
      css: /style.css
    )
    ( body
      attr: src="http://retroforth.org/manatee.png"
      attr: height="128"
      attr: width="128"
      ( img ) ( br )
      ( h2 ." Retro Forth" )
      attr: style="margin-top:-10px;margin-left:50px;"
      ( hr )
      attr: style="width:300px;margin-top:30px"
      ( div
        ( h1 ." Error 404" )
        ( p ." The page you requested could not be found. Please go back" _
            ." and try again."
        )
      )
    )
  )
;

' 404 is notfound

: /
  ( html
    ( head
      ( title ." Retro, A Minimalistic Forth System" )
      css: /style.css
    )
    ( body
      attr: src="http://retroforth.org/manatee.png"
      attr: height="128"
      attr: width="128"
      ( img ) ( br )
      ( h2 ." Retro Forth" )
      attr: style="margin-top:-20px;margin-left:50px;"
      ( hr )
      attr: style="width:300px;margin-top:30px"
      ( div
        ( h4 ." Downloads" )
        ( ul
          ( li [a http://retroforth.org/binaries/Images/latest ." Latest Image" ] )
          ( li [a http://retroforth.org/binaries/ ." Binaries" ] )
          ( li [a http://retroforth.org/RetroLanguage.html ." Manual" ] )
          ( li [a http://github.com/crcx/retro10 ." Source" ] )
          ( li [a http://s3.retroforth.org/download/index.html ." Past Stable Releases" ] )
        )
        ( hr )
        ( p ." The code and documentation for Retro is gifted by the" _
            ." author, Charles Childers, to the Public Domain."
        )
        ( p ." In the event your country does not recognize my ability to so" _
            ." dedicate it, I also grant unconditional, non-revocable" _
            ." permission to anyone who obtains a copy of this software," _
            ." to use, modify and to redistribute it without limitation."
        )
        ( hr )
        ( h4 ." Platform Support" )
        ( ul
          ( li ( strong ." x86:" ) ." Windows, Linux, Mac OS X, NetBSD, OpenBSD, FreeBSD, DragonFly BSD, BeOS R5, Haiku" )
          ( li ( strong ." x86-64:" ) ." Linux, Mac OS X" )
          ( li ( strong ." ARM:" ) ." iTouch [after jailbreak]" )
          ( li ( strong ." Alpha:" ) ." Linux" )
          ( li ( strong ." PowerPC:" ) ." AIX, Mac OS X" )
          ( li ( strong ." Java (console):" ) ." Linux, Mac OS X, iTouch" )
          ( li ( strong ." Java (MIDP)" ) )
          ( li ( strong ." .NET" ) )
          ( li ( strong ." Browsers:" ) ." FireFox, Opera, Safari, Chrome" )
          ( li ( strong ." Adobe AIR" ) )
        )
      )
    )
  )
;


: /style.css
  ~
  body
  {
    background: black;
    font-size: 16pt;
    color: silver;
    background-image: url('http://retroforth.org/backdrop.png');
    background-repeat: repeat-x;
  }

  h2
  {
    margin-top: -60px;
    margin-left: 80px;
  }
  a { color: silver; }
  a:link { color: silver; }
  a:visited, a:hover { color: red; }
  ~
;


end
bye

